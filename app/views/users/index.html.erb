<div class="page-header">
  <h1>ユーザーの一覧</h1>
</div>

<p><%= link_to "会員の新規登録", :new_user unless current_user %></p>

<% if @users.present? %>
<div class="row">
  <div class="col-md-8">
    <% @users.each do |user| %>
    <div class="panel panel-default">
      <div class="panel-body">
      <p><%= link_to user.name, [user, :tasks] %></p>
      </div>
    </div>
    <% end %>
  </div>

  <div class="col-md-4">
    <%= form_tag :search_users, method: :get, class: "form-inline text-right" do %>
    <div class="form-group">
      <%= text_field_tag "q", params[:q], class: "form-control", placeholder: "ユーザー名" %>
    </div>
    <%= submit_tag "検索", class: "btn btn-default" %>
    <% end %>
  </div>
</div>

<% else %>
<h4>ユーザーが登録されていません</h4>
<% end %>

<%= paginate @users %>