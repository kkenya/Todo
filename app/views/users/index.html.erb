<h1>会員一覧</h1>

<p><%= link_to "会員の新規登録", :new_user unless current_user %></p>

<%= form_tag :search_users, method: :get do %>
  <p><%= text_field_tag "q", params[:q] %>
  <%= submit_tag "検索" %></p>
<% end %>

<% if @users.present? %>
  <table class="list">
    <tr>
      <th>ユーザー名</th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td style="text-align: right"><%= link_to user.name, [user, :tasks] %></td>
        <td>
          <%= link_to "編集", [:edit, user] %> |
          <%= link_to "削除", user, method: :delete, data: { confirm: "本当に削除しますか?" } %>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  <h1>会員情報がありません</h1>
<% end %>