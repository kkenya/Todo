<%= render "shared/errors", obj: @task %>

<div class="form-group">
  <%= form.label :title, class: "control-label" %>
  <%= form.text_field :title, class: "form-control" %>
  <div class="form-group">
    <%= form.label :memo, class: "control-label"%>
    <%= form.text_field :memo, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :status %>
    <div class="btn dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <%= form.select :status, Task.status_options %>
    </div>
  </div>
  <label class="c-input c-radio">
    <%= form.radio_button :open, true %>公開
    <%= form.radio_button :open,false %>非公開
  </label>
</div>
