<div class="list-group-item">
  <% if task.created_by?(current_user) %>
  <div class="row">
    <div class="col-md-8">
      <h4 class="list-group-item-heading">
        <%= task.title %>
      </h4>
    </div>
    <div class="col-md-4">
      <div class="text-right">
        <%= link_to "編集", [:edit, current_user, task], class: "btn btn-primary btn-sm" %>
        <%= link_to "削除", [current_user, task], method: :delete, data: { confirm: "本当に削除しますか?" }, class: "btn btn-danger btn-sm" %>
      </div>
    </div>
  </div>
  <% else %>
  <h4 class="list-group-item-heading">
    <%= task.title %>
  </h4>
  <% end %>
  <div class="list-group-item-text">
    <p><%= task.memo %></p>
  </div>
</div>